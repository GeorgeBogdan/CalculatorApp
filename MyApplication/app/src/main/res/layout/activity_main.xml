<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0"
        android:weightSum="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/hello_world"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/historyTextView"
                android:layout_span="1"
                android:layout_column="0"
                android:focusableInTouchMode="false"
                android:textSize="32dp"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentTextView"
                android:layout_span="1"
                android:layout_column="0"
                android:focusableInTouchMode="false"
                android:textSize="32dp"
                android:layout_gravity="right" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:layout_span="1"
                android:stretchColumns="0,1,2,3"
                android:gravity="fill"
                android:weightSum="4">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="C"
                        android:id="@+id/button10"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:enabled="true"
                        android:onClick="clearAll_Click"
                        android:singleLine="true"
                        android:background="@android:drawable/btn_dialog"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="1"
                        android:id="@+id/button1"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="2"
                        android:id="@+id/button2"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="3"
                        android:id="@+id/button3"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="fill"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="NA"
                        android:id="@+id/button12"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:enabled="false"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="4"
                        android:id="@+id/button4"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="5"
                        android:id="@+id/button5"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="6"
                        android:id="@+id/button6"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="fill"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="-"
                        android:id="@+id/button11"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:enabled="true"
                        android:onClick="binaryButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="7"
                        android:id="@+id/button7"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="8"
                        android:id="@+id/button8"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="9"
                        android:id="@+id/button9"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="fill"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/button"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:enabled="true"
                        android:onClick="clear_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:id="@+id/button0"
                        android:layout_below="@+id/currentTextView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="numericButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="+"
                        android:id="@+id/buttonAdd"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="binaryButton_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="="
                        android:id="@+id/buttonEq"
                        android:layout_below="@+id/button9"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_rowSpan="1"
                        android:onClick="eval_Click"
                        style="@android:style/Widget.Holo.Light.Button" />

                </TableRow>

            </TableLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>
